{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
  },
  "env": {
    "es6": true,
  },
  "rules": {
    "arrow-body-style": ["error", "as-needed"],
    "no-console": "off",
  },
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "no-undef": "off",
      },
    },
  ],
}
